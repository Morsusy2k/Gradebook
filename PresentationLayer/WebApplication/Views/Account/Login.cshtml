@model Gradebook.PresentationLayer.WebApplication.Models.ViewModels.LoginViewModel

<div class="main-form">
    <div class="col-md-12">
        <i class="zmdi zmdi-account zmdi-hc-2x"></i>
        <div class="main-header">Login</div>
        <hr />
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "main-error" })

            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "main-error" })
            @Html.ValidationMessage("IncorrectCredentials", "", new { @class = "main-error" })

            <div class="main-remember">
                @Html.CheckBoxFor(m => m.RememberMe, new { @id = "remember" })
                <label for="remember">Remember me</label>
            </div>
            <hr \>

            <input class="btn btn-default btn-block" type="submit" value="Login" />
        }
    </div>
</div>
