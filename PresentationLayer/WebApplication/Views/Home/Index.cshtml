@model PagedList<Gradebook.PresentationLayer.WebApplication.Models.BasicModels.PupilModel>
@using PagedList
@using PagedList.Mvc

<div class="main-filter noselect">
    <div class="float-right">
        
            <input type="text" name="search" id="search" class="nomargin" placeholder="Search..." /><button type="submit" class="main-search-button nomargin"><i class="zmdi zmdi-search"></i></button>

    </div>
    <a href="#"><div class="main-filter-option float-right">CLASS/GRADE <span class="caret"></span></div></a>
    <a href="#"><div class="main-filter-option float-right">YEAR <span class="caret"></span></div></a>
    <a href="#"><div class="main-filter-option float-right">FIELD OF STUDY <span class="caret"></span></div></a>
</div>
<div class="main-table-container">
    <div class="main-table-header">
        <div>ID</div>
        <div>Full Name</div>
        <div>Year + Grade</div>
        <div>Field of study</div>
        <div class="details-coll">Details</div>
    </div>
    @foreach (var item in Model)
    {
        Html.RenderPartial("Partial/_PartialPupil", item);
    }
</div>
<div class="main-pagging noselect">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }),
    new PagedListRenderOptions { ContainerDivClasses = new[] { "main-pagging-container" }, UlElementClasses = new[] { "main-pagging-ul" } })
</div>