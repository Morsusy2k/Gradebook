@model Gradebook.PresentationLayer.WebApplication.Models.BasicModels.MarkModel

@using (Html.BeginForm("AddMark", "Pcp", FormMethod.Post, new { @class = "main-form-row" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>@Html.HiddenFor(model => Model.MarksId)</div>
    <div class="main-form-input">@Html.EditorFor(model => Model.Grade)</div>
    <div class="main-form-input">@Html.EditorFor(model => Model.Type)</div>
    <div>@Html.CheckBoxFor(model => Model.Important)</div>
    <div>@Html.CheckBoxFor(model => Model.Final)</div>
    <div></div>
    <div></div>
    <div class="details-coll">
        <button type="submit"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i></button>
    </div>
}